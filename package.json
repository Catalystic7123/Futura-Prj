
{
  "name": "futura-chron-v1",
  "version": "1.0.0",
  "description": "High-precision temporal and price analysis tool.",
  "main": "main.js",
  "author": "Futura Systems",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.futurachron.v1",
    "productName": "Futura Chron V1",
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Install Futura Chron V1",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "files": [
      "index.html",
      "index.tsx",
      "App.tsx",
      "types.ts",
      "main.js",
      "components/**/*",
      "services/**/*",
      "metadata.json"
    ]
  }
}
